<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
  <div class="col-8 offset-2">
    <h3>Create a New Listing</h3>
    <form
      method="POST"
      action="/listings"
      novalidate
      class="needs-validation"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <lable class="form-label" for="title">Title</lable>
        <input
          name="listing[title]"
          placeholder="Add a catchy title"
          type="text"
          class="form-control"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>

      <div class="mb-3">
        <lable class="form-label" for="description">Description</lable>
        <textarea
          name="listing[description]"
          class="form-control"
          required
        ></textarea>
        <div class="invalid-feedback">Description should be valid!</div>
      </div>

      <!-- <div class="mb-3">
        <lable class="form-label" for="image">Image Link/URL</lable>
        <input
          name="listing[image]"
          placeholder="enter image URL/Link"
          type="text"
          class="form-control"
        />
      </div> -->
      <div class="mb-3">
        <lable class="form-label" for="image">Upload Listing Image</lable>
        <input
          name="listing[image]"
          type="file"
          class="form-control"
          required
        />
      </div>

      <div class="row">
        <div class="mb-3 col-md-4">
          <lable class="form-label" for="price">Price</lable>
          <input
            name="listing[price]"
            placeholder="1800"
            type="number"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Price should be valid!</div>
        </div>

        <div class="mb-3 col-md-8">
          <lable class="form-label" for="country">Country</lable>
          <input
            name="listing[country]"
            placeholder="India"
            type="text"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Country name should be valid!</div>
        </div>
      </div>
      <div class="mb-3">
        <lable class="form-label" for="location">Location</lable>
        <input
          name="listing[location]"
          placeholder="Jaipur, Rajasthan"
          type="text"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Location should be valid!</div>
      </div>

      <button class="btn btn-dark add-btn mb-2">Add</button>
    </form>
  </div>
</div>
