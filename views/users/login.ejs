<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
  <div class="col-6 offset-3">
    <h2>Login</h2>
    <form method="POST" action="/login" novalidate class="needs-validation">
      <div class="mb-3">
        <lable class="form-label" for="username">Username</lable>
        <input
          name="username"
          id="username"
          type="text"
          class="form-control"
          required
        />
      </div>
      <div class="mb-3">
        <lable class="form-label" for="password">Password</lable>
        <input
          name="password"
          id="password"
          type="password"
          class="form-control"
          required
        />
      </div>
      <button class="btn btn-success">LogIn</button>
    </form>
  </div>
</div>
